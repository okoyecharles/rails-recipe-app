<%= form_with model: @recipe, method: :post, scope: :new_recipe do |f| %>
  <div>
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :preparation_time, class: 'form-label' %>
    <%= f.text_field :preparation_time, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :cooking_time, class: 'form-label' %>
    <%= f.text_field :cooking_time, class: 'form-control' %>
  </div>
  <div>
    <span>Is this recipe public?</span>
    <div>
      <%= f.label :public, 'Yes' %>
      <%= f.radio_button :public, true %>
    </div>
    <div>
      <%= f.label :public, 'No' %>
      <%= f.radio_button :public, false %>
    </div>
 </div>
  <%= f.submit 'Submit', class: 'btn btn-success fw-bold mt-2' %>
<% end %>
